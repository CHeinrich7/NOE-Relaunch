{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_new' %}

{% block main %}
    <h1>{{ 'title.image_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.file) }}
        {{ form_row(form.publishedAt) }}

        <input type="submit" value="{{ 'label.create_image'|trans }}" class="btn btn-primary" />

        {{ form_widget(form.saveAndCreateNew, { label: 'label.image.save_and_create_new', attr: { class: 'btn btn-primary' } }) }}

        <a href="{{ path('admin_image_index') }}" class="btn btn-link">
            {{ 'action.image.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
